{
    "name": "orbit",
    "version": "1.4.0",
    "description": "Gerenciamento de Pedidos SAP, Tarefas e Automação SAP",
    "main": "./out/main/index.js",
    "author": "Orbit",
    "scripts": {
        "dev": "electron-vite dev",
        "generate-icon": "node generate-icon.mjs",
        "build": "npm run generate-icon && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "npm run build && electron-builder --win",
        "build:unpack": "npm run build && electron-builder --win --dir"
    },
    "dependencies": {
        "archiver": "^7.0.0",
        "clsx": "^2.1.0",
        "exceljs": "^4.4.0",
        "jspdf": "^4.0.0",
        "jspdf-autotable": "^5.0.2",
        "lucide-react": "^0.330.0",
        "pdf-parse": "^2.4.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-is": "^18.2.0",
        "react-router-dom": "^6.21.0",
        "recharts": "^3.7.0",
        "sonner": "^2.0.7",
        "tailwind-merge": "^2.2.1",
        "tesseract.js": "^7.0.0"
    },
    "devDependencies": {
        "@types/archiver": "^7.0.0",
        "@types/node": "^22.0.0",
        "@types/pdf-parse": "^1.1.5",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.17",
        "electron": "^39.2.7",
        "electron-builder": "^26.4.0",
        "electron-vite": "^5.0.0",
        "png-to-ico": "^3.0.1",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.0",
        "vite": "^7.3.0"
    },
    "build": {
        "appId": "com.orbit.app",
        "productName": "Orbit",
        "directories": {
            "output": "release",
            "buildResources": "resources"
        },
        "files": [
            "out/**/*"
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "resources/icon.ico",
            "signAndEditExecutable": false
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Orbit",
            "deleteAppDataOnUninstall": true,
            "installerIcon": "resources/icon.ico",
            "uninstallerIcon": "resources/icon.ico"
        },
        "portable": {
            "artifactName": "${productName} ${version}.${ext}"
        },
        "publish": []
    }
}